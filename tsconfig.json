{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2019"],
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
  },
  "exclude": ["node_modules", "dist", "dev"]
}
